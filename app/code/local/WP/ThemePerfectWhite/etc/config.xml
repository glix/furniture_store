<?xml version="1.0"?>
<config>
    <modules>
        <WP_ThemePerfectWhite>
            <version>2.2.4</version>
        </WP_ThemePerfectWhite>
    </modules>
    <global>
        <helpers>
            <themeperfectwhite>
                <class>WP_ThemePerfectWhite_Helper</class>
            </themeperfectwhite>
        </helpers>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <theme_perfectwhite translate="title" module="themeperfectwhite">
                                            <title><![CDATA[Web & People: Theme Perfect White]]></title>
                                            <sort_order>1000</sort_order>
                                        </theme_perfectwhite>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <theme_perfectwhite>
            <general>
                <version>2.2.4</version>
            </general>
        </theme_perfectwhite>
    </default>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <about_webandpeople translate="title" module="themeperfectwhite">
                                            <title><![CDATA[Web & People: About Us]]></title>
                                            <sort_order>1000</sort_order>
                                        </about_webandpeople>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <global>
        <blocks>
            <themeperfectwhite>
                <class>WP_ThemePerfectWhite_Block</class>
            </themeperfectwhite>
        </blocks>
    </global>
</config>
